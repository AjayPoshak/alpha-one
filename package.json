		"local:server": "webpack --mode development --config ./webpack.server.js --watch",
		"start:server": "nodemon ./build/server/app.bundle.js",
		"build:local": "webpack --mode development --config ./webpack.client.js",
		"build:prod": "npm run clean && npm run build:client & npm run build:server",
