{
	"extends": [
		"airbnb",
		"prettier"
	  ],
	  "plugins": ["prettier"],
		"rules": {
			"prettier/prettier": [
				"error",
				{
					"trailingComma": "none"
				  }				
			  ],
			"no-tabs": "off",
			"indent": ["error", "tab"],
			"one-var":"off",
			"semi": "off",
			"react/jsx-indent": [4, "tab"],
			"react/jsx-indent-props": [4, "tab"],
			"comma-dangle": ["error", "never"],
			"react/jsx-filename-extension": "off",
			"no-restricted-syntax": "off",
			"arrow-body-style": ["error", "as-needed"],
			"func-names": ["error", "as-needed"]
		},
		"globals": {
			"window": true,
			"document": true,
			"fetch": true
		},
		"env": {
			"browser": true,
			"node": true,
			"es6": true
		  }
}
